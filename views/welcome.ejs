        function toggleSemester(semester) {
            const headerRow = document.querySelector(`tr[data-semester="${semester}"]`);
            const subjectRows = document.querySelectorAll(`.semester-${semester}-subject`);
            const arrow = headerRow.querySelector('.semester-arrow');
            
            // Get current collapsed states from localStorage
            let collapsedStates = JSON.parse(localStorage.getItem('semesterCollapsedStates') || '{}');
            
            if (arrow.classList.contains('collapsed')) {
                // Expand
                arrow.classList.remove('collapsed');
                arrow.textContent = '‚ñº';
                subjectRows.forEach(row => {
                    row.classList.remove('collapsed');
                });
                // Update localStorage
                collapsedStates[semester] = false;
            } else {
                // Collapse
                arrow.classList.add('collapsed');
                arrow.textContent = '‚ñ∂';
                subjectRows.forEach(row => {
                    row.classList.add('collapsed');
                });
                // Update localStorage
                collapsedStates[semester] = true;
            }
            
            // Save to localStorage
            localStorage.setItem('semesterCollapsedStates', JSON.stringify(collapsedStates));
        }
        
        function restoreSemesterStates() {
            // Get collapsed states from localStorage
            const collapsedStates = JSON.parse(localStorage.getItem('semesterCollapsedStates') || '{}');
            
            // Apply saved states to each semester
            Object.keys(collapsedStates).forEach(semester => {
                if (collapsedStates[semester] === true) {
                    const headerRow = document.querySelector(`tr[data-semester="${semester}"]`);
                    if (headerRow) {
                        const subjectRows = document.querySelectorAll(`.semester-${semester}-subject`);
                        const arrow = headerRow.querySelector('.semester-arrow');
                        
                        if (arrow) {
                            arrow.classList.add('collapsed');
                            arrow.textContent = '‚ñ∂';
                        }
                        
                        subjectRows.forEach(row => {
                            row.classList.add('collapsed');
                        });
                    }
                }
            });
        }
        
