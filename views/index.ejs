    <script>
        // Mobile menu functionality
        function toggleMobileMenu() {
            const navLinks = document.getElementById('navLinks');
            const menuToggle = document.querySelector('.mobile-menu-toggle');
            const isActive = navLinks.classList.contains('active');
            
            navLinks.classList.toggle('active');
            menuToggle.classList.toggle('active');
            
            // Update ARIA attributes for accessibility
            menuToggle.setAttribute('aria-expanded', !isActive);
            menuToggle.setAttribute('aria-label', !isActive ? 'Cerrar men√∫ de navegaci√≥n' : 'Abrir men√∫ de navegaci√≥n');
        }
        
        function closeMobileMenu() {
            const navLinks = document.getElementById('navLinks');
            const menuToggle = document.querySelector('.mobile-menu-toggle');
            
            navLinks.classList.remove('active');
            menuToggle.classList.remove('active');
        }
        
        // Close mobile menu when clicking outside
        document.addEventListener('click', function(event) {
            const navLinks = document.getElementById('navLinks');
            const menuToggle = document.querySelector('.mobile-menu-toggle');
            const navbar = document.querySelector('.navbar');
            
            if (!navbar.contains(event.target) && navLinks.classList.contains('active')) {
                closeMobileMenu();
            }
        });
        
        // FAQ functionality
        function toggleFAQ(element) {
            const faqItem = element.parentElement;
            const faqAnswer = element.nextElementSibling;
            const arrow = element.querySelector('.faq-arrow');
            
            // Close all other FAQ items
            document.querySelectorAll('.faq-item').forEach(item => {
                if (item !== faqItem) {
                    item.classList.remove('active');
                    item.querySelector('.faq-answer').classList.remove('active');
                }
            });
            
            // Toggle current FAQ item
            faqItem.classList.toggle('active');
            faqAnswer.classList.toggle('active');
        }
        
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
        
        // Lazy loading implementation for images
        function createImageObserver() {
            const imageObserver = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const lazyImage = entry.target;
                        const placeholder = lazyImage.nextElementSibling;
                        
                        // Create a new image to preload
                        const img = new Image();
                        img.onload = function() {
                            // Image loaded successfully
                            lazyImage.src = this.src;
                            lazyImage.classList.add('loaded');
                            if (placeholder && placeholder.classList.contains('image-placeholder')) {
                                placeholder.classList.add('hidden');
                            }
                        };
                        img.onerror = function() {
                            // Image failed to load
                            if (placeholder && placeholder.classList.contains('image-placeholder')) {
                                placeholder.innerHTML = '‚ö†Ô∏è Error loading image';
                                placeholder.style.color = '#dc3545';
                            }
                        };
                        img.src = lazyImage.dataset.src;
                        
                        observer.unobserve(lazyImage);
                    }
                });
            }, {
                // Load images when they're 100px away from being visible
                rootMargin: '100px'
            });
            
            return imageObserver;
        }

        // Lazy loading implementation for videos
        function createVideoObserver() {
            const videoObserver = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const lazyVideo = entry.target;
                        const placeholder = lazyVideo.nextElementSibling;
                        const videoSource = lazyVideo.querySelector('source');
                        
                        // Load video source
                        if (lazyVideo.dataset.src) {
                            lazyVideo.src = lazyVideo.dataset.src;
                            if (videoSource && videoSource.dataset.src) {
                                videoSource.src = videoSource.dataset.src;
                            }
                            
                            // Handle video load events
                            lazyVideo.addEventListener('loadeddata', function() {
                                lazyVideo.classList.add('loaded');
                                if (placeholder && placeholder.classList.contains('video-placeholder')) {
                                    placeholder.classList.add('hidden');
                                }
                            });
                            
                            lazyVideo.addEventListener('error', function() {
                                if (placeholder && placeholder.classList.contains('video-placeholder')) {
                                    const content = placeholder.querySelector('.video-placeholder-content');
                                    if (content) {
                                        content.innerHTML = '<div class="video-icon">‚ùå</div><p>Error al cargar el video</p>';
                                        content.style.color = '#dc3545';
                                    }
                                }
                            });
                            
                            // Start loading the video
                            lazyVideo.load();
                        }
                        
                        observer.unobserve(lazyVideo);
                    }
                });
            }, {
                // Load videos when they're 50px away from being visible
                rootMargin: '50px'
            });
            
            return videoObserver;
        }

        // Initialize Swiper carousel
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize lazy loading for images
            const imageObserver = createImageObserver();
            const lazyImages = document.querySelectorAll('.lazy-image');
            
            lazyImages.forEach(img => {
                imageObserver.observe(img);
            });
            
            // Initialize lazy loading for videos
            const videoObserver = createVideoObserver();
            const lazyVideos = document.querySelectorAll('.lazy-video');
            
            lazyVideos.forEach(video => {
                videoObserver.observe(video);
            });
            
            const swiper = new Swiper('.utec-swiper', {
                // Navigation arrows
                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                },
                
                // Pagination
                pagination: {
                    el: '.swiper-pagination',
                    clickable: true,
                },
                
                // Auto-advance every 4 seconds
                autoplay: {
                    delay: 4000,
                    disableOnInteraction: false,
                },
                
                // Loop the slides
                loop: true,
                
                // Effect
                effect: 'slide',
                
                // Speed
                speed: 600,
                
                // Lazy loading integration
                lazy: {
                    loadPrevNext: true,
                    loadPrevNextAmount: 2,
                },
                
                // Responsive breakpoints
                breakpoints: {
                    // when window width is >= 320px
                    320: {
                        slidesPerView: 1,
                        spaceBetween: 20
                    },
                    // when window width is >= 768px
                    768: {
                        slidesPerView: 2,
                        spaceBetween: 30
                    },
                    // when window width is >= 1024px
                    1024: {
                        slidesPerView: 3,
                        spaceBetween: 40
                    }
                },
                
                // Callback to handle lazy loading when slide changes
                on: {
                    slideChange: function() {
                        // Force lazy loading check when slide changes
                        const currentSlides = document.querySelectorAll('.swiper-slide-active, .swiper-slide-next, .swiper-slide-prev');
                        currentSlides.forEach(slide => {
                            const lazyImg = slide.querySelector('.lazy-image:not(.loaded)');
                            if (lazyImg) {
                                imageObserver.observe(lazyImg);
                            }
                        });
                    }
                }
            });
        });
        
    </script>
    
